<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }, :html => {:class => 'user-form'}) do |f| %>
  <h2>Forgot your password?</h2>

  <%= devise_error_messages! %>

  <p><%= f.email_field :email, :autofocus => true,:placeholder => 'Email', class:'form-control' %></p>

  <p><%= f.submit "Send me reset password instructions", class: 'btn btn-primary btn-lg btn-block' %></p>

  <%= render "devise/shared/links" %>

<% end %>

