<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'user-form'}) do |f| %>
  <h2>Sign up</h2>
  <%= devise_error_messages! %>

  <p><%= f.text_field :name, :autofocus => true, :placeholder=>'Name', class:'form-control' %></p>

  <p><%= f.email_field :email, :placeholder => 'Email', class:'form-control' %></p>

  <p><%= f.password_field :password, :placeholder => 'Password', class:'form-control' %></p>

  <p><%= f.password_field :password_confirmation, :placeholder => 'Password confirmation', class:'form-control' %></p>

  <p><%= f.submit "Sign up", class: 'btn btn-primary btn-lg btn-block' %></p>

  <%= render "devise/shared/links" %>
<% end %>
